{
    "compilerOptions": {
        "incremental": true,
        "outDir": "./build",
        "target": "es6",
        "module": "commonjs",
        "allowJs": true,
        "lib": ["es6"],
        "alwaysStrict": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "forceConsistentCasingInFileNames": true
    },
    "includes": ["**/*"],
    "exclude": ["./node_modules", "./build", "./coverage"]
}
